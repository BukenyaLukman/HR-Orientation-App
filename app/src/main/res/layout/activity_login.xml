<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".LoginActivity">

   <androidx.appcompat.widget.Toolbar
       android:id="@+id/admin_toolbar"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:background="@color/colorPrimary">
   </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/next_media"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="NextMedia"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        android:gravity="center"
        android:layout_below="@+id/admin_toolbar"
        android:layout_marginTop="20dp"/>


    <EditText
        android:id="@+id/admin_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/email"
        android:drawableTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/next_media"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="15dp"
        android:background="@drawable/input_design"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/admin_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:padding="15dp"
        android:inputType="textPassword"
        android:textColorHint="@android:color/white"
        android:layout_below="@+id/admin_email"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/password"
        android:drawableTint="@android:color/white"
        android:background="@drawable/input_design"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/forget_password_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Forgot Password?"
        android:layout_below="@+id/admin_login_password"
        android:textColor="@android:color/white"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/login_btn"
        android:background="@drawable/buttons"
        android:layout_below="@+id/admin_login_password"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="35dp"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="true"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/need_new_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Need New Account ?"
        android:layout_below="@+id/login_btn"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"/>



    <TextView
        android:id="@+id/option_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textColor="@android:color/white"
        android:layout_below="@+id/login_btn"
        android:gravity="center"
        android:layout_marginTop="27dp"
        android:textSize="28sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/login_phone_btn"
        android:layout_below="@+id/option_word"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/white"
        android:textStyle="bold|italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentExtra"
        android:text="Login Using Phone"
        android:textAllCaps="false"
        android:padding="20dp"
        android:textSize="20sp"/>



</RelativeLayout>